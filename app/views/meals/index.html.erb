<p id="notice"><%= notice %></p>

<h1>Listing Meals</h1>

<table>
  <thead>
    <tr>
      <th>Main course</th>
      <th>Meat</th>
      <th>Second course</th>
      <th>Salad</th>
      <th>Optional</th>
      <th>Desert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.main_course %></td>
        <td><%= meal.meat %></td>
        <td><%= meal.second_course %></td>
        <td><%= meal.salad %></td>
        <td><%= meal.optional %></td>
        <td><%= meal.desert %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

